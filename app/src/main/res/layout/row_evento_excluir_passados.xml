<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                 <TextView
                     android:id="@+id/time_evento_passado"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="Time da Casa"
                     android:minWidth="10dp"/>
                <TextView
                    android:id="@+id/resultado_jogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minWidth="4dp"
                    android:hint="X"
                    android:paddingLeft="@dimen/activity_padding_8dp"
                    android:paddingRight="@dimen/activity_padding_8dp"
                    android:textAlignment="center"
                    />

                 <TextView
                     android:id="@+id/adversario_evento_passado"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:autoSizeMinTextSize="@dimen/activity_padding_8dp"
                     android:hint="Time Adversario"
                     android:minWidth="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/local_evento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Local" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/data_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="12/12/2017"
                    android:paddingRight="@dimen/activity_padding_16dp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/row_edit_passados"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icons8_edit" />
        <ImageButton
            android:id="@+id/row_excluir_passados"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="btn_exclui_evento"
            android:src="@drawable/ic_delete_black_24dp" />
    </LinearLayout>


</LinearLayout>